{
  "include": [
    "src/**/*",
    "rollup.config.js",
    "webpack.config.js",
    "postcss.config.js",
    ".eslintrc.js"
  ],
  "exclude": ["dist"],
  "compilerOptions": {
      "plugins": [{ "name": "typescript-plugin-css-modules" }],
      "target": "ES2020", 
      "typeRoots": ["node_modules/@types"],
      // "lib": [],
      "jsx": "react",
      "module": "ES2020",
      "moduleResolution": "Node16",
      "declaration": true,
      "declarationDir": "dist/types",
      // "declarationMap": true,
      // "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,

      /* Type Checking */
      "strict": true,
      "noImplicitAny": true
    }
}